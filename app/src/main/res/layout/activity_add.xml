<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText   android:id="@+id/product_name"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:nextFocusDown="@+id/price"
            android:hint="@string/add_product_name_hint"/>
        <EditText   android:id="@+id/price"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:nextFocusDown="@+id/count"
            android:inputType="numberDecimal"
            android:hint="@string/add_product_price_hint"/>
        <EditText   android:id="@+id/count"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:nextFocusDown="@+id/category_spinner"
            android:numeric="integer"
            android:hint="@string/add_product_count_hint"/>

        <ru.panov.testapp.fab.FloatingActionButton
            android:id="@+id/btn_edit_add_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_white_24dp"
            fab:fab_colorNormal="@color/accent"
            fab:fab_colorPressed="@color/accent_pressed"
            fab:fab_colorRipple="@color/ripple"/>

        <ru.panov.testapp.fab.FloatingActionButton
            android:id="@+id/btn_cancel_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_white_24dp"
            fab:fab_colorNormal="@color/accent"
            fab:fab_colorPressed="@color/accent_pressed"
            fab:fab_colorRipple="@color/ripple"/>
        
    </LinearLayout>

</LinearLayout>